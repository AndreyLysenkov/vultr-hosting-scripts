{
    /* system; */
    "extensions.autoUpdate": false,
    "breadcrumbs.enabled": true,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "extensions.showRecommendationsOnlyOnDemand": true,

    /* system.theme; */
    "workbench.iconTheme": "material-icon-theme",

    /* system.theme.icon.material; */
    "material-icon-theme.showWelcomeMessage": false,
    "material-icon-theme.showReloadMessage": true,
    "material-icon-theme.showUpdateMessage": false,
    "material-icon-theme.activeIconPack": "vue_vuex",
    "material-icon-theme.hidesExplorerArrows": false,

    /* system.window; */
    "window.title": "${rootName}://${activeEditorMedium}",
    "window.menuBarVisibility": "toggle",

    /* system.workbench; */
    "workbench.activityBar.visible": true,
    "workbench.editor.labelFormat": "medium",
    "workbench.list.horizontalScrolling": true,
    "workbench.editor.closeOnFileDelete": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.editor.openPositioning": "left",
    "workbench.editor.tabCloseButton": "left",
    "workbench.editor.tabSizing": "shrink",

    /* system.window.zen_mode; */
    "zenMode.hideTabs": false,
    "zenMode.hideStatusBar": true,
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,

    /* system.debug; */
    "debug.inlineValues": true,
    "debug.internalConsoleOptions": "openOnSessionStart",
    "debug.openDebug": "openOnSessionStart",
    "debug.showInStatusBar": "always",
    "debug.toolBarLocation": "docked",
    "debug.openExplorerOnEnd": true,
    "debug.showSubSessionsInToolBar": true,

    /* system.terminal; */
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.rightClickBehavior": "copyPaste",
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.enableBell": true,
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.drawBoldTextInBrightColors": false,

    /* git; */
    "scm.alwaysShowActions": true,
    "scm.alwaysShowProviders": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "git.fetchOnPull": true,
    "git.inputValidation": "always",
    "git.scanRepositories": [
        "/home/walpy/git/mine/"
    ],
    "git.enableSmartCommit": true,
    "git.enableCommitSigning": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.defaultCloneDirectory": "/home/walpy/git/mine/",
    "git.detectSubmodules": true,
    "git.promptToSaveFilesBeforeCommit": "always",
    "git.ignoreMissingGitWarning": true,
    "git.showPushSuccessNotification": true,
    "git.branchSortOrder": "alphabetically",

    /* editor; */
    "editor.detectIndentation": false,
    "editor.emptySelectionClipboard": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.lineNumbers": "on",
    "editor.mouseWheelScrollSensitivity": 1,
    "editor.scrollBeyondLastLine": true,
    "editor.rulers": [
        120,
        150
    ],
    "editor.wordWrapColumn": 150,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.snippetSuggestions": "bottom",
    "editor.fontFamily": "'Droid Sans Mono for Powerline', 'Droid Sans Mono', 'monospace', 'Droid Sans Fallback'",
    "editor.mouseWheelZoom": true,
    "editor.wrappingIndent": "indent",
    "editor.wordWrap": "wordWrapColumn",
    "editor.fontLigatures": true,
    "editor.accessibilitySupport": "off",
    "editor.hover.delay": 250,
    "editor.maxTokenizationLineLength": 10000,
    "editor.scrollBeyondLastColumn": 25,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorStyle": "block",

    /* editor.file_system; */
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.incrementalNaming": "smart",
    "files.maxMemoryForLargeFilesMB": 1024,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.watcherExclude": {
        "**/bin/**": true,
        "**/obj/**": true,
        "**/out/**": true
    },

    /* editor.search; */
    "search.exclude": {
        "**/bin": true,
        "**/bower_components": true,
        "**/node_modules": true,
        "**/obj": true,
        "**/out": true
    },
    "search.useIgnoreFiles": true,
    "search.showLineNumbers": true,
    "search.useGlobalIgnoreFiles": true,
    "search.maintainFileSearchCache": true,
    "search.smartCase": true,

    /* editor.minimap; */
    "editor.minimap.maxColumn": 100,
    "editor.minimap.showSlider": "always",
    "editor.minimap.enabled": false,

    /* editor.suggestions; */
    "editor.quickSuggestionsDelay": 100,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggestSelection": "recentlyUsedByPrefix",

    /* editor.brackets_highlighting; */
    "bracketPairColorizer.timeOut": 0,
    "bracketPairColorizer.forceUniqueOpeningColor": false,
    "bracketPairColorizer.forceIterationColorCycle": false,
    "bracketPairColorizer.colorMode": "Consecutive",
    "bracketPairColorizer.highlightActiveScope": true,
    "bracketPairColorizer.showBracketsInGutter": false,
    "bracketPairColorizer.scopeLineRelativePosition": true,
    "bracketPairColorizer.showHorizontalScopeLine": true,
    "bracketPairColorizer.showVerticalScopeLine": true,
    "bracketPairColorizer.consecutivePairColors": [
        "()",
        "[]",
        "{}",
        [
            "#aa44aa",
            "#ff88ff",
            "#88ffaa",
            "#88aaff",
            "#ffaa88"
        ],
        "Red"
    ],
    "bracketPairColorizer.activeScopeCSS": [
        "borderStyle : solid",
        "borderWidth : 1px",
        "borderColor : {color}; opacity: 0.5"
    ],
    "bracketPairColorizer.scopeLineCSS": [
        "borderStyle : dotted",
        "borderWidth : 1px",
        "borderColor : {color}; opacity: 0.5"
    ],
    "bracket-pair-colorizer-2.colorMode": "Independent",
    "bracket-pair-colorizer-2.forceIterationColorCycle": true,
    "bracket-pair-colorizer-2.forceUniqueOpeningColor": true,
    "bracket-pair-colorizer-2.rulerPosition": "Full",
    "bracket-pair-colorizer-2.colors": [
        "#aa44aa",
        "#ff88ff",
        "#88ffaa",
        "#88aaff",
        "#ffaa88"
    ],
    "bracket-pair-colorizer-2.unmatchedScopeColor": "Red",
    "bracket-pair-colorizer-2.showHorizontalScopeLine": true,
    "bracket-pair-colorizer-2.showVerticalScopeLine": true,
    "bracket-pair-colorizer-2.showBracketsInRuler": true,
    "bracket-pair-colorizer-2.showBracketsInGutter": true,
    "bracket-pair-colorizer-2.scopeLineRelativePosition": true,
    "bracket-pair-colorizer-2.highlightActiveScope": true,
    "bracket-pair-colorizer-2.activeScopeCSS": [
        "borderStyle : solid",
        "borderWidth : 1px",
        "borderColor : {color}; opacity: 0.5"
    ],
    "bracket-pair-colorizer-2.scopeLineCSS": [
        "borderStyle : dotted",
        "borderWidth : 1px",
        "borderColor : {color}; opacity: 0.5"
    ],
    "bracket-pair-colorizer-2.excludedLanguages": [],

    /* git.gitlens; */
    "gitlens.defaultDateFormat": "HH:mm:ss://DD/MM/YYYY//Z",
    "gitlens.menus": false,
    "gitlens.blame.highlight.locations": [
        "gutter",
        "line",
        "overview"
    ],
    "gitlens.hovers.annotations.over": "annotation",
    "gitlens.statusBar.command": "gitlens.toggleFileBlame",
    "gitlens.statusBar.reduceFlicker": true,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.recentChanges.highlight.locations": [
        "gutter",
        "line",
        "overview"
    ],

    /* git.gitlab; */
    "gitlab.showStatusBarLinks": true,
    "gitlab.showIssueLinkOnStatusBar": false,
    "gitlab.showMrStatusOnStatusBar": false,
    "gitlab.showPipelineUpdateNotifications": true,
    "gitlab.showProjectMergeRequests": false,

    /* lang.xml; */
    "xmlTools.xmlFormatterImplementation": "v2",

    /* lang.markdown; */
    "markdown.extension.toc.githubCompatibility": true,
    "markdown.extension.print.absoluteImgPath": false,
    "markdown.extension.preview.autoShowPreviewToSide": false,
    "markdown.extension.list.indentationSize": "inherit",
    "markdown.extension.toc.downcaseLink": false,
    "markdown.extension.toc.tav.tabSize": 2,
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
        "editor.rulers": [
            80
        ]
    },

    /* lang.markdown.lint */
    "markdownlint.run": "onSave",
    "markdownlint.config": {
        "MD003": {
            "style": "atx"
        },
        "MD004": {
            "style": "dash"
        },
        "MD013": {
            "line_length": 80,
            "code_blocks": true,
            "code_block_line_length": 80,
            "headers": true,
            "heading_line_length": 80,
            "tables": true
        },
        "MD028": true,
        "MD029": {
            "style": "ordered"
        },
        "MD035": {
            "style": "---"
        },
        "MD038": true,
        "MD046": {
            "style": "consistent"
        }
    },

    /* lang.powershell; */
    "powershell.codeFormatting.ignoreOneLineBlock": false,
    "powershell.codeFormatting.preset": "Allman",
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.integratedConsole.focusConsoleOnExecute": false,

    /* lang.js.formatter */
    "prettier.arrowParens": "avoid",
    "prettier.bracketSpacing": true,
    "prettier.printWidth": 140,
    "prettier.semi": true,
    "prettier.singleQuote": false,
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "all",
    "prettier.useTabs": false,

    /* lang.js.npm; */
    "npm.enableScriptExplorer": true,
    "npm.runInTerminal": false,
    "npm-intellisense.scanDevDependencies": true,
    "npm-intellisense.showBuildInLibs": true,

    /* lang.js.eslint; */
    "eslint.alwaysShowStatus": true,

    /* lang.c#; */
    "csharp.format.enable": true,
    "csharp.unitTestDebuggingOptions": {},
    "csharp.suppressHiddenDiagnostics": false,
    "csharp.suppressDotnetInstallWarning": false,

    /* lang.c#.razor; */
    "razor.languageServer.debug": true,

    /* lang.c#.omnisharp */
    "omnisharp.projectLoadTimeout": 300,
    "omnisharp.maxProjectResults": 15,
    "omnisharp.enableEditorConfigSupport": true,
    "omnisharp.disableMSBuildDiagnosticWarning": true,
    "omnisharp.loggingLevel": "information",
    "omnisharp.waitForDebugger": false,

    /* lang.c#.solution */
    "vssolution.createTemplateFolderQuestion": false,
    "vssolution.netcoreIgnore": [
        "bin",
        "node_modules",
        "obj",
        ".ds_store",
        "out"
    ],
    "vssolution.solutionExplorerIcons": "current-theme",
    "vssolution.xmlspaces": "4",
    "vssolution.showMode": "explorer",
    "vssolution.showOutputChannel": false,

    /* lang.c#.tests; */
    "dotnet-test-explorer.addProblems": true,
    "dotnet-test-explorer.autoExpandTree": false,
    "dotnet-test-explorer.autoWatch": false,
    "dotnet-test-explorer.codeLensFailed": "❌",
    "dotnet-test-explorer.codeLensPassed": "✔",
    "dotnet-test-explorer.codeLensSkipped": "❔",
    "dotnet-test-explorer.enableTelemetry": false,
    "dotnet-test-explorer.leftClickAction": "gotoTest",
    "dotnet-test-explorer.showCodeLens": true,
    "dotnet-test-explorer.useTreeView": true,
    "dotnet-test-explorer.runInParallel": true,
    "nxunitExplorer.monoruntime": false,
    "nxunitExplorer.modules": [
        "**/bin/**/*.{dll,exe}"
    ],
    "nxunitExplorer.logpanel": true,
    "nxunitExplorer.skippattern": "xunit.*"
}
